{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "baseUrl": ".",
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "isolatedModules": true,
        "experimentalDecorators": true,
        "typeRoots": ["./resources/ts/@types"],
        "paths": {
            "~/*": ["./resources/ts/*"]
        }
    },
    "include": ["resources/ts/**/*"]
}
